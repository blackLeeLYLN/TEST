<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/camera_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ff666666"
                >

            </FrameLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_reset"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/crosshair" />

            <ImageView
                android:id="@+id/iv_left_decrease"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/decrease"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/iv_right_add"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/round_add"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="16dp"
                android:gravity="right">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/btn_af_5x"
                    android:src="@drawable/af_5x" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/btn_af_15x"
                    android:src="@drawable/af_15x"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/btn_af_40x"
                    android:src="@drawable/af_40x" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:background="#ff000000">

            <ImageView
                android:id="@+id/iv_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/left_delete"/>

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/camera"/>

            <ImageView
                android:id="@+id/iv_right_round"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/cloud"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_alignBottom="@+id/iv_cha"
                android:layout_toRightOf="@+id/iv_cha"
                android:layout_toEndOf="@+id/iv_cha"
                android:textColor="#ffffffff"
                android:id="@+id/steps" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>